<?xml version="1.0" encoding="utf-8"?>
<!--   旦圈列表使用-->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:maxHeight="180dp"
    android:orientation="vertical"
    app:cardCornerRadius="22dp"
    app:cardElevation="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/downline"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/header_of_squareItem"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/photo_cheetah"
            />

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >
        <TextView
            android:id="@+id/author_of_squareItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="豹子头"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/signature_of_squareItem"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="-4dp"
            android:layout_marginLeft="8dp"
            android:text="八十万禁军教头" />
        </LinearLayout>
        <TextView
            android:id="@+id/date_of_squareItem"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="12/25"
            android:layout_gravity="top|end"
            android:layout_margin="8dp"
            />

    </LinearLayout>

      <FrameLayout
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:maxHeight="100dp"
          >

          <!--  考虑最终的正文布局，是summer类的岁长度变化，还是给定一个最大长度，超出的隐藏掉-->
          <TextView
              android:id="@+id/content_of_squareItem"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:maxHeight="110dp"
              android:text="    林冲，是小说《水浒传》中的人物。原为东京八十万禁军枪棒教头，生得豹头环眼、燕颔虎须，身长八尺，人称豹子头，又唤“小张飞”。善使枪棒，重情义，武艺盖世，有万夫不当之勇。妻子张氏贞娘。岳父张教头也是禁军教头，父亲是东京的提辖官。操刀鬼曹正是他的徒弟。无子女。也是整部书中从无败绩的神将。 林冲与倒拔垂杨柳的花和尚鲁智深一见如故，结拜为兄弟。"
              android:textSize="18sp"
              android:background="@drawable/downline"
              android:overScrollMode="ifContentScrolls"
             />

      </FrameLayout>


    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="right"
        >

        <ImageView
            android:id="@+id/good_for_squareItem"
            android:layout_height="33dp"
            android:layout_width="33dp"
            android:src="@mipmap/icon_praise_normal"
            android:padding="5dp"
            android:layout_gravity="end"
            android:layout_marginRight="120dp"
            />

        <ImageView
            android:id="@+id/comment_for_squareItem"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@mipmap/forum"
            android:layout_gravity="end"
            android:padding="5dp"
            android:layout_marginRight="50dp"
            />



    </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>