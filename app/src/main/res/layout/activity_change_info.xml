<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChangeInfoActivity">



    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
    <android.support.v7.widget.Toolbar
        android:id="@+id/change_info_toolbar"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:visibility="visible"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_width="match_parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            />


        <TextView
            android:id="@+id/btn_save_changeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:layout_margin="8dp"

            />

    </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/headerImage_toChange"
            android:layout_height="120dp"
            android:layout_width="150dp"
            android:scaleType="fitCenter"
            android:visibility="visible"
            android:layout_margin="5dp"
            />

        <ImageView
            android:id="@+id/takePhoto_forChangHead"
            android:layout_height="120dp"
            android:layout_width="120dp"
            android:src="@drawable/camera"
            android:visibility="visible"
            />
        <ImageButton
            android:id="@+id/choosePhoto_forChange"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/myphoto_05"
            android:visibility="visible"
            />
    </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:contentPadding="5dp"
            app:cardCornerRadius="12dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/downline"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="昵称："
                        android:textSize="20sp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="30dp"
                        />
                    <TextView
                        android:id="@+id/personal_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:hint="Waaa"
                        android:layout_gravity="end"
                        android:textColorHint="@color/bright_grey"
                        />
                </FrameLayout>



                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/downline"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="签名："
                        android:textSize="20sp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="30dp"
                        />
                    <EditText
                        android:id="@+id/signature_toChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:hint="signature"
                        android:layout_gravity="end"
                        android:textColorHint="@color/bright_grey"
                        android:background="@null"
                        />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/downline"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="性别："
                        android:textSize="20dp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="30dp"
                        />
                    <EditText
                        android:id="@+id/sex_toChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:hint="女"
                        android:layout_gravity="end"
                        android:textColorHint="@color/bright_grey"
                        android:background="@null"
                        />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/downline"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="出生日期："
                        android:textSize="20sp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="30dp"
                        />
                    <TextView
                        android:id="@+id/birthDate_toChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:hint="1970-01-01"
                        android:textColorHint="@color/bright_grey"
                        android:layout_gravity="end"
                        />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/downline"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="描述："
                        android:textSize="20sp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="30dp"
                        />
                    <EditText
                        android:id="@+id/explain_toChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:hint="描述"
                        android:layout_gravity="end"
                        android:textColorHint="@color/bright_grey"
                        android:background="@null"
                        />
                </FrameLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>


</LinearLayout>