<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:radiostyle="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
    <ImageView
        android:id="@+id/header_of_message"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        />

      <FrameLayout
          android:layout_height="match_parent"
          android:layout_width="fill_parent"
          >
          <TextView
              android:id="@+id/author_of_message"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="friend"
              android:layout_margin="5dp"
              />
          <TextView
              android:id="@+id/content_of_message"
              android:layout_width="match_parent"
              android:layout_height="20dp"
              android:layout_gravity="bottom"
              android:layout_margin="5dp"
              android:text="A message from your friend."
              />

          <TextView
              android:id="@+id/time_of_message"
              android:layout_height="20dp"
              android:layout_margin="5dp"
              android:layout_width="wrap_content"
              android:layout_gravity="top|end"
              android:text="17:46"
              />

          <TextView
              android:id="@+id/num_of_message"
              android:layout_gravity="bottom|end"
              android:layout_margin="9dp"
              android:layout_width="19dp"
              android:layout_height="19dp"
              android:text="8"
              android:textColor="@color/white"
              android:background="@drawable/round_cornor_rectangle"
              />

      </FrameLayout>
    </LinearLayout>
        <!---->
    </LinearLayout>
</android.support.v7.widget.CardView>